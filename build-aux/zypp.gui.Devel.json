{
    "app-id" : "zypp.gui.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "zypp-gui",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=RUST_LOG=zypp-gui=debug",
        "--env=G_MESSAGES_DEBUG=none"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": ["--share=network"],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ],
        "env": {
            "RUST_BACKTRACE": "1"
        }
    },
    "modules" : [
        {
            "name" : "zypp-gui",
            "buildsystem" : "meson",
            "run-tests": true,
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}

